---
layout: layouts/base.njk
title: 'Running Calculator'
permalink: '/'
---
        <form name="runCalculator" id="container">
            <h1 id="heading">Calculate Your Pace</h1>
            <hr />
            <div id="calculator--wrapper">
                <div class="c-input">
                    <input
                        autofocus=true
                        type="number"
                        inputmode="numeric"
                        name="hours"
                        id="hours"
                        value=""
                        onblur="if (this.value=='') this.value='0';"
                        
                    />
                    <label for="hours">Hours</label>
                </div>
                <div class="c-input">
                    <input
                        type="number"
                        inputmode="numeric"
                        name="minutes"
                        id="minutes"
                        placeholder=":00:"
                        value=""
                        onblur="if (this.value=='') this.value='0';"
                    />
                    <label for="minutes">Minutes</label>
                </div>
                <div class="c-input">
                    <input
                        type="number"
                        inputmode="numeric"
                        name="seconds"
                        id="seconds"
                        placeholder=":00"
                        value=""
                        onblur="if (this.value=='') this.value='0';"
                    />
                    <label for="seconds">Seconds</label>
                </div>
                <div class="c-input distance">
                    <div id="input--distance">
                        <input
                        type="number"
                        inputmode="numeric"
                        step="any"
                        name="mileage"
                        id="mileage"
                        placeholder="0"
                        value=""
                        onblur="if (this.value=='') this.value='0';"
                        />
                        <select id="distanceMeasure" name="distance">
                            <option value="miles">Miles</option>
                            <option value="kilometers">Kilometers</option>
                            <option value="yards">Yards</option>
                        </select>
                    </div>
                    <label for="mileage">Mileage</label>
                </div>
                <button
                    id="calculate"
                    class="c-button"
                    type="button"
                    onclick="pacePerMile()"
                >
                    Calculate
                </button> 
                <div id="output--container">
                    <label for="result">Pace:</label>
                    <div id="output--holder">
                        <output name="result" id="result" value="00:00:00">00:00:00</output>
                    </div>
                    <span id="paceMeasure">/ mi</span>
                </div>
            </div>
        </form> 

        
